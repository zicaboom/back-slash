{
  "compilerOptions": {
    "target": "ES2017",                                
    "module": "CommonJS",                         
    "lib": ["ES6"],                                            
    "outDir": "build/dist",                              
    "rootDir": "./src",                             
    "removeComments": true,                 
    "strict": false,                         
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types",
      "./node_modules/@types"],                 
    "types": ["@types/jest", "@types/node"],     
    "baseUrl": ".",       
    "esModuleInterop": true,                        
    "experimentalDecorators": true,             
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true 
  },
  "include":["src/**/*"]
}
